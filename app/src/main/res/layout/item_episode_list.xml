<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/TextViewBold"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Pilot"
        app:layout_constraintTop_toTopOf="@id/tv_title_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_title_name"
        style="@style/TextView"/>

    <TextView
        android:id="@+id/tv_title_air_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air Date: "
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        style="@style/TextViewBold"/>
    <TextView
        android:id="@+id/tv_air_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="December 2, 2013"
        app:layout_constraintTop_toTopOf="@id/tv_title_air_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_title_air_date"
        style="@style/TextView"/>

    <TextView
        android:id="@+id/tv_title_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode: "
        app:layout_constraintTop_toBottomOf="@id/tv_air_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        style="@style/TextViewBold"/>
    <TextView
        android:id="@+id/tv_episode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="S01E01"
        app:layout_constraintTop_toTopOf="@id/tv_title_episode"
        app:layout_constraintStart_toEndOf="@id/tv_title_episode"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        style="@style/TextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>